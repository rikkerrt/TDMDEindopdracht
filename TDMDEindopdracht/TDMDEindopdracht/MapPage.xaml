<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TDMDEindopdracht.MapPage"
             xmlns:viewmodel="clr-namespace:TDMDEindopdracht.Domain.Services"
             x:DataType="viewmodel:MapPageViewModel"
             xmlns:custom="clr-namespace:TDMDEindopdracht.Domain.Services"
             xmlns:maps="http://schemas.microsoft.com/dotnet/2021/maui/maps"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             Title="MapPage">
    
    <ContentPage.Resources>
        <ResourceDictionary>
            <toolkit:InvertedBoolConverter x:Key="InvertedBoolConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <custom:BindableMap 
            x:Name="MapView"
            Grid.Row="1"
            MvvmMapElements="{Binding MapElements}"
            VisibleRegionInMap="{Binding CurrentMapSpan}"
            IsShowingUser="True"
            MapType="Street"
         >
        </custom:BindableMap>
    </Grid>
</ContentPage>