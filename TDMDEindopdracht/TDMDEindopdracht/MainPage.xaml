<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="TDMDEindopdracht.MainPage"
             xmlns:viewModel="clr-namespace:TDMDEindopdracht.Domain.Services"
             x:DataType="viewModel:MainPageViewModel">

    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior Command="{Binding LoadInPageCommand}" EventName="Loaded" />
    </ContentPage.Behaviors>

    <StackLayout>
        <CollectionView ItemsSource="{Binding NameOfStation}"
                        SelectionMode="Single"
                        Margin="0,20,0,0">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="LightGray" Padding="10" Margin="0,10"
                           Style="{StaticResource FrameStyle}">
                        <VerticalStackLayout>
                            <!-- Label toont de naam van de route -->
                            <Label Text="{Binding Stations}" FontSize="18"  
                                   Style="{StaticResource LabelStyle}"/>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>
